# GCP Project Configuration
project_id = "your-gcp-project-id"
region     = "us-central1"

# Cloud Run Configuration
service_name = "ontoserver"
service_account_email = "ontoserver-run-sa@your-gcp-project-id.iam.gserviceaccount.com"

# Network Configuration
vpc_name = "ontoserver-vpc"
subnet_name = "ontoserver-subnet"
subnet_cidr = "10.0.0.0/24"

# Database Configuration
database_instance_name = "ontoserver-db"
database_name     = "ontoserver"
database_user     = "ontoserver"
database_password = "your-secure-password-here"  # Use a strong password
database_version  = "POSTGRES_14"
database_tier     = "db-f1-micro"  # Use db-custom-2-4096 for production

# Load Balancer Configuration (optional)
enable_load_balancer = false  # Set to true if you need a custom domain
domain_name = ""  # Set your domain if enable_load_balancer is true
ssl_certificate_name = "ontoserver-ssl-cert"

# Environment Configuration
environment = "dev"

# Tags
tags = {
  Environment = "dev"
  Project     = "ontoserver"
  ManagedBy   = "terraform"
  Owner       = "your-team"
} 